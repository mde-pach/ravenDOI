{
  "name": "__MSG_manifestAppName__",
  "author": "Raven Project",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "__MSG_manifestAppDescription__",
  "icons": {
    "16": "icons/raven_icon_16.png",
    "128": "icons/raven_icon_128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "options_ui": {
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "icons/raven_icon_19.png",
      "38": "icons/raven_icon_38.png"
    },
    "default_title": "RavenDOI",
    "default_popup": "popup.html"
  }
}


